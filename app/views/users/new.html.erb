<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>   
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :bio %>
	<%= f.text_field :bio %>

	<%= f.label :age %>
	<%= f.text_field :age %>

	<%= f.label :email %>
	<%= f.text_field :email %>


	<%= f.label "profile pic!" %>
	<%= f.file_field :avatar %> 

	<%= f.submit %>

<% end %>